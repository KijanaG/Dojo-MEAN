<!doctype html>
<html lang="en">
  <head>
    <title>The Wall</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>
  <body>
      <h1>The Dojo Message Board</h1>
      <br>
      <hr>
      <% if (messages.create) {%>
        <% for (var x of messages.create) {%> 
        <h3 style="color: red;"><%= x %></h3>
        <% } %>
        <% } %>
      <form action="/message/new" method="POST" class="form">
        <label for="name">Name:</label>
        <input type="text" name="name" class="form-group">
        <br>
        <label for="message">Message:</label>
        <textarea name="message" cols="40" rows="4" class="form-group"></textarea>
        <input class="form-group"type="submit" value="Post message">
       </form>
    <br>
    <div style="width: 70%; padding-left: 5%;;">
    <% for(var x in things) {%>
        <h2>Name: <%= things[x].name%></h2>
        <h3>Message: <%= things[x].message%></h3>
        <% if(things[x].comments) {%>
            <% for(var y = 0;y<  things[x].comments.length;y++) {%> 
                <h4><%=things[x].comments[y].name%></h4>
                <h4><%=things[x].comments[y].comment%></h4>
                <br>
            <%}%>
        <%}%>
        <div style="padding-left: 20px;">
            <form action="/comment/<%=things[x]._id%>" method="POST">
            <% if (messages.comm) {%>
                <% for (var x of messages.comm) {%> 
                <h3 style="color: red;"><%= x %></h3>
                <% } %>
                <% } %>
            <h5>Name:</h5>
            <input type="text" name="name">
            <h5>Comment:</h5>
            <input type="text" name="comment">
            <br>
            <br>
            <input type="submit" value="Post a comment">
            </form>
        </div>
    <%}%>
    </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
</html>